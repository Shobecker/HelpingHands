<% provide(:title, "Worker Log in") %>
<h1>Worker Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:worker_session, url: login_path) do |f| %>

      <%= f.label :userName %>
      <%= f.email_field :userName, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signupworker_path %></p>
  </div>
</div>