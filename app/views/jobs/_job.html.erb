<li id="job-<%= job.id %>">
  <span class="customer"><%= link_to job.customer.firstName, job.customer %></span>
  <span class="content"><%= job.bedrooms %></span>
  <span class="content"><%= job.fromAdress %></span>
  <span class="content"><%= job.toAddress %></span>
  <span class="content"><%= job.worker %></span>
  <span class="content"><%= job.active %></span>
  <p>Price: $<%= job.bedrooms %>00</p>
  <span class="timestamp">
    Posted <%= time_ago_in_words(job.created_at) %> ago.
  </span>
      <%= link_to "Confirm", job, method: :delete,
                                       data: { confirm: "You sure?" } %>
      <%= link_to "Reject", job, method: :delete,
                                       data: { confirm: "You sure?" } %>

</li>