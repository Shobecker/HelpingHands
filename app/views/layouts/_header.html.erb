<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Helping Hands", root_path, id: "logo" %>
    <nav>
      <ul class="navbar navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if customer_logged_in? %>
          <li><%= link_to "Customer", '#' %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
               Account <b class="caret"></b>
              </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_customer %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logoutcustomer_path, method: :delete %>
              </li>
            </ul>
          </li>  

          <% elsif worker_logged_in? %>
          <li><%= link_to "Worker", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_worker %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logoutworker_path, method: :delete %>
              </li>
            </ul>
          </li>

          <% elsif admin_logged_in? %>
          <li><%= link_to "Admin", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_admin %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logoutadmin_path, method: :delete %>
              </li>
            </ul>
          </li>

        <% elsif applicant_logged_in? %>
          <li><%= link_to "Applicant", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_applicant %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logoutapplicant_path, method: :delete %>
              </li>
            </ul>
          </li>
          
        <% else %>
          <li><%= link_to "Customer Log in", logincustomer_path %></li>
        <%end%>
      </ul>
    </nav>
  </div>
