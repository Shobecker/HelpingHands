<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Helping Hands", root_path, id: "logo" %>
    <nav>
      <ul class="navbar navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in_customer? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
               Account <b class="caret"></b>
              </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_customer %></li>
              <li><%= link_to "Settings", edit_customer_path(current_customer) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Customer Log out", logoutcustomer_path, method: :delete %>
              </li>
            </ul>
          </li>  

          <% elsif logged_in_worker? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_worker %></li>
              <li><%= link_to "Settings", edit_worker_path(current_worker) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Worker Log out", logoutworker_path, method: :delete %>
              </li>
            </ul>
          </li>

          <% elsif logged_in_admin? %>
          <li><%= link_to "Admin", admins_path %></li>
          <li><%= link_to "Applicant", applicants_path %></li>
          <li><%= link_to "Customer", customers_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_admin %></li>
              <li><%= link_to "Settings", edit_admin_path(current_admin) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Admin Log out", logoutadmin_path, method: :delete %>
              </li>
            </ul>
          </li>

        <% elsif logged_in_applicant? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_applicant %></li>
              <li><%= link_to "Settings", edit_applicant_path(current_applicant) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Applicant Log out", logoutapplicant_path, method: :delete %>
              </li>
            </ul>
          </li>
          
        <% else %>
          <li><%= link_to "Customer Log in", logincustomer_path %></li>
        <%end%>
      </ul>
    </nav>
  </div>
</header>