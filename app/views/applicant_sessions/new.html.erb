<% provide(:title, "Applicant/Worker Log in") %>
<h1>Applicant/Worker Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:applicant_session, url: loginapplicant_path) do |f| %>

      <%= f.label :userName %>
      <%= f.text_field :userName, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_applicant_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>Want to work for us? <%= link_to "Apply now!", signupapplicant_path %></p>
  </div>
</div>