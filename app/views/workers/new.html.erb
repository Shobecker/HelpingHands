<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@worker) do |f| %>
      <%= f.label :firstName %>
      <%= f.text_field :firstName %>

      <%= f.label :lastName %>
      <%= f.text_field :lastName %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :vehicle %>
      <%= f.text_field :vehicle %>

      <%= f.label :license %>
      <%= f.text_field :license %>

      <%= f.label :birthday %>
      <%= f.text_field :birthday %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :bankaccount %>
      <%= f.text_field :bankaccount %>

      <%= f.label :bankrouting %>
      <%= f.text_field :bankrouting %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :userName %>
      <%= f.text_field :userName %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Hire", class: "btn btn-primary" %>
      <p></p>
      <%= f.submit "Reject", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>